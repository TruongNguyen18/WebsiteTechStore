@model AppUserModel
@{
    ViewData["title"] = "Create User";
}


<div class="col-md-9">
	<h3>Tạo người dùng</h3>
    <form autocomplete="off" asp-action="Create" enctype="multipart/form-data">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <textarea asp-for="Email" required class="form-control"> </textarea>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            <textarea asp-for="PhoneNumber" required class="form-control"> </textarea>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Mật khẩu</label>
            <textarea asp-for="PasswordHash" required class="form-control"> </textarea>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Chức vụ</label>
            <select asp-for="RoleId" required class="form-control" asp-items="ViewBag.Roles">

            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div> 

        <div class="form-group">
            <button class="btn btn-danger" style="border-radius:10px;font-weight:700;"> <i class="fa fa-plus"></i> Tạo</button>
        </div>


    </form>
    <a asp-action="Index">Trở về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
