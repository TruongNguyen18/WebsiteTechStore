
@{
    ViewData["title"] = "Brand User";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="page-header">
        <h2 class="page-title">DANH SÁCH NGƯỜI DÙNG</h2>
        <div class="page-actions">
            <a asp-action="Create" asp-controller="User" class="btn btn-danger" style="border-radius:10px;font-weight:700;">
                <i class="fa fa-plus"></i> Thêm người dùng
            </a>
        </div>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>PasswordHash</th>
                <th>Số điện thoại</th>
				<th>Chức vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usersWithRoles in Model)
            {
                <tr>
                    <td>@usersWithRoles.User.Id</td>
                    <td>@usersWithRoles.User.UserName</td>
                    <td>@usersWithRoles.User.Email</td>
                    <td>@usersWithRoles.User.PasswordHash</td>
                    <td>@usersWithRoles.User.PhoneNumber</td>
                    <td>@usersWithRoles.RoleName</td>
                    
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container">
        @if (pager.TotalPages > 0) //2 trang
        {
            <ul class="pagination justify-content-end">

                @if (pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-pg="1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                    </li>
                }
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++) //1 = 1 <= 2
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pg="@pge">@pge</a>
                    </li>


                }
                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-pg="@(pager.TotalPages)">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</body>

</html>