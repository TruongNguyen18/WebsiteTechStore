@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Role";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="page-header">
        <h2 class="page-title">DANH SÁCH CHỨC VỤ</h2>
        <div class="page-actions">
            <a asp-action="Create" asp-controller="Role" class="btn btn-danger" style="border-radius:10px;font-weight:700;">
                <i class="fa fa-plus"></i> Thêm chức vụ
            </a>
        </div>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên chức vụ</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                   <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>