@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order List";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="page-header">
        <h2 class="page-title">ĐƠN HÀNG</h2>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Địa chỉ</th>
                <th>UserName</th>
                <th>Ngày tạo đơn hàng</th>
                <th>Trạng thái đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AddressLine</td>
                    <td>@item.UserName</td>
                    <td>@item.CreateDate</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="badge bg-primary">Đang chờ xử lý</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="badge bg-success">Đã nhận đơn </span>
                        }
                        else if(item.Status ==3)
                        {
                            <span class="badge bg-danger">Đang xử lý</span>
                        }
                        else if (item.Status == 4)
                        {
                            <span class="badge bg-danger">Đã giao tới đơn vị vận chuyển</span>
                        }
                        else if (item.Status == 5)
                        {
                            <span class="badge bg-danger">Đã giao</span>
                        }
                        else if (item.Status == 6)
                        {
                            <span class="badge bg-danger">Đã hủy</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xem đơn hàng</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>