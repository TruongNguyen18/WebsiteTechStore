@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="page-header">
    <h2 class="page-title">DANH SÁCH SẢN PHẨM</h2>
    <div class="page-actions">
        <a asp-action="Create" class="btn btn-danger" style="border-radius:10px;font-weight:700;">
            <i class="fa fa-plus"></i> Thêm sản phẩm
        </a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá tiền</th>
            <th scope="col">Hỉnh ảnh</th>
            <th scope="col">Từ khóa</th>
            <th scope="col">Loại sản phẩm</th>
            <th scope="col">Thương hiệu</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td>
                    <img src="~/media/products/@item.Image" alt="@item.Name" width="120" asp-append-version="true" />
                </td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-area="Admin" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
       
    </tbody>
</table>
<div class="container">
    @if (pager.TotalPages > 0) //2 trang
    {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++) //1 = 1 <= 2
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>


            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>