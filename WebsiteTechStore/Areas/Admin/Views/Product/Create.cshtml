@model ProductModel
@{
		ViewData["title"] = "Create Product";
}
<h4>Thêm sản phẩm</h4>
<div class=" col-md-9">
	<form asp-action="Create" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Price</label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Category</label>
			<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
				<option>--Choose a category</option>
			</select>
			<span asp-validation-for="CategoryId" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Brand</label>
			<select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
				<option>--Choose a brand</option>
			</select>
			<span asp-validation-for="BrandId" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Trạng thái</label>
			<select asp-for="Status" class="form-control">
				<option value="1">Hiển thị</option>
				<option value="0">Ẩn</option>
			</select>
			<span asp-validation-for="Status" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label>Image</label>
			<input asp-for="ImageUpload" class="form-control" />
			<span asp-validation-for="ImageUpload" class="text-danger" />
		</div>
		<div class="form-group">
			<button class="btn btn-danger" style="border-radius:10px;font-weight:700;"> <i class="fa fa-plus"></i> Tạo</button>
		</div>
	</form>
	<a asp-action="Index">Trở về danh sách sản phẩm</a>
</div>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script src="~/lib/jquery-validation/dist/localization/messages_vi.min.js"></script>
}