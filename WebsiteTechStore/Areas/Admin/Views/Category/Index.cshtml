@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Categories List";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
  <div class="page-header">
        <h2 class="page-title">LOẠI SẢN PHẨM</h2>
        <div class="page-actions">
            <a asp-action="Create" class="btn btn-danger" style="border-radius:10px;font-weight:700;">
                <i class="fa fa-plus"></i> Thêm loại sản phẩm
            </a>
        </div>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Loại sản phẩm</th>
                <th>Mô tả</th>
                <th>Từ khóa</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Slug</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>