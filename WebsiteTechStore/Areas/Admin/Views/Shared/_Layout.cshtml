<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>@ViewData["title"] Admin </title>

	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	<link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link type="text/css" rel="stylesheet" href="~/css/slick.css" />
	<link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />
	<link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />
	<link rel="stylesheet" href="~/css/font-awesome.min.css">
	<link type="text/css" rel="stylesheet" href="~/css/style.css" />

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<header class="admin-topbar">
	<div class="container">
		<div class="row items-center" style="padding:10px 0;">
			<div class="col-md-6">
				<h3 class="admin-title">ADMIN</h3>
			</div>
			<div class="col-md-6 text-right">
				<form method="get" asp-controller="Product" asp-action="Index" class="admin-search">
					<input name="q" value="@(Context.Request.Query["q"])" type="text" class="admin-input" placeholder="Search here..." />
					<button type="submit" class="btn btn-danger admin-btn">Search</button>
				</form>
			</div>
		</div>
	</div>

	<nav id="navigation" class="admin-nav">
		<div class="container">
			<div id="responsive-nav">
				<ul class="main-nav nav navbar-nav">
					<li class="active"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Home</a></li>
					<li><a asp-area="Admin" asp-action="Index" asp-controller="Product">Product</a></li>
					<li><a asp-area="Admin" asp-action="Index" asp-controller="Catagory">Catagory</a></li>
					<li><a asp-area="Admin" asp-action="Index" asp-controller="Brand">Brand</a></li>
				</ul>
			</div>
		</div>
	</nav>
</header>

<body>

	<section class="admin-content">
		<div class="container">
			<div class="row">
				@Html.Partial("_NotificationPartial")
				@RenderBody()
			</div>
		</div>
	</section>

	<!-- FOOTER -->
	<footer id="footer">
	</footer>
	<!-- /FOOTER -->
	
	<!-- jQuery Plugins -->
	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/slick.min.js"></script>
	<script src="~/js/nouislider.min.js"></script>
	<script src="~/js/jquery.zoom.min.js"></script>
	<script src="~/js/main.js"></script>
	<script>
		setTimeout(() => {
			document.querySelectorAll('.notification').forEach(el => {
				el.style.transition = 'opacity 0.5s';
				el.style.opacity = '0';
				setTimeout(() => el.remove(), 500);
			});
		}, 3000);
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>


