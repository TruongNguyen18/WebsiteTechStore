@model WebsiteTechStore.Models.ViewModels.CheckoutAddressViewModel
@{
    ViewData["Title"] = "Địa chỉ giao hàng";
}

<div class="checkout-page">
    <div class="container-xxl py-4">
        <div class="mx-auto" style="max-width:1100px">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4 p-lg-5">
                    <h3>Địa chỉ giao hàng & Thanh toán</h3>

                    <form asp-action="Address" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row g-4">
                            <div class="form-group">
                                <label>Tỉnh thành phố</label>
                                <textarea asp-for="Province" class="form-control" placeholder="VD: Hà Nội"> </textarea>
                                <span asp-validation-for="Province" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Quận/Huyện</label>
                                <textarea asp-for="District" class="form-control" placeholder="VD: Thanh Xuân"> </textarea>
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Phường/Xã</label>
                                <textarea asp-for="Ward" class="form-control" placeholder="VD: Nhân Chính"> </textarea>
                                <span asp-validation-for="Ward" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ cụ thể</label>
                                <textarea asp-for="AddressLine" class="form-control" placeholder="Số nhà, tên đường, tòa nhà..."> </textarea>
                                <span asp-validation-for="AddressLine" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label><h4>Phương thức thanh toán</h4></label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="0" id="pmCOD" checked />
                                    <label class="form-check-label" for="pmCOD"><h4>Thanh toán trực tiếp khi nhận hàng (COD)</h4></label>
                                </div>
                            </div>

                            <div class="col-12 d-flex flex-wrap gap-2">
                                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-lg">Quay lại giỏ hàng</a>
                                <button type="submit" class="btn btn-danger btn-lg">Xác nhận đặt hàng</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

