@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order History";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="page-header">
        <h2 class="page-title">LỊCH SỬ ĐƠN HÀNG</h2>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>OrderCode</th>
                <th>UserName</th>
                <th>Ngày tạo đơn hàng</th>
                <th>Trạng thái đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.CreateDate</td>
                    <td>
                        @if(item.Status == 1)
                        {
                            <span class="badge bg-primary">Đơn hàng mới</span>
                        }
                        else if(item.Status == 2)
                        {
                            <span class="badge bg-success">Đã xử lý</span>
                        }
						else if (item.Status == 3)
                        {
                            <span class="badge bg-danger">Đơn hàng đã hủy</span>
						}
                    </td>
                    <td> 
                        @if (item.Status != 3)
                        {
                            <a class="btn btn-danger btn-sm confirmDeletion" asp-action="CancelOrder" asp-controller="Account" asp-route-ordercode="@item.OrderCode">Hủy đơn hàng</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>