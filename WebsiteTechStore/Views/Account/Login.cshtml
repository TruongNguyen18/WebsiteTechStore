@model LoginViewModel;
@{
    ViewData["Title"] = "Đăng nhập / Đăng ký";
}

<style>
    /* Căn giữa toàn trang (trừ header/footer Electro) */
    .auth-wrap {
        min-height: calc(80vh - 200px); /* có thể chỉnh 200px tùy chiều cao header/footer */
        display: flex;
        align-items: center; /* căn giữa theo chiều dọc */
        justify-content: center; /* căn giữa theo chiều ngang */
        padding: 32px 16px; /* tránh dính mép */
    }

    /* Khung form */
    .auth-card {
        width: 100%;
        max-width: 520px;
        margin: 0 auto;
        border: 1px solid #eee;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,.06);
    }

    .auth-title {
        font-weight: 700;
        color: #2B2D42;
    }

    .d-none {
        display: none !important;
    }
</style>


<div class="auth-wrap">
    <div class="card auth-card">
        <div class="card-body p-4 p-md-5">

            <!-- ========== LOGIN: HIỂN THỊ MẶC ĐỊNH ========== -->
            <div id="panel-login">
                <h4 class="auth-title mb-3 text-center">Đăng nhập</h4>

                <form asp-controller="Account" asp-action="Login" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label>UserName</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input asp-for="Password" class="form-control" placeholder="••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="primary-btn w-auto px-5">
                            <i class="fa fa-sign-in"></i> Đăng nhập
                        </button>
                    </div>

                </form>

                <p class="text-center mt-3 mb-0">
                    Chưa có tài khoản?
                    <a asp-action="Create">Đăng ký mới</a>
                </p>
            </div>

        </div>
    </div>
</div>
